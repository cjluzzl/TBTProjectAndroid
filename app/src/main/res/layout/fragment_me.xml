<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_red_bg"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_me_2"
        >

        <cn.cjluzzl.tbt.tbtproject.view.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/my_launcher2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_me_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_head"
            android:text="cjluzzl"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/iv_user_head"
            android:textColor="#000"
            />
        <Button
            android:id="@+id/btn_me_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="#f91"
            android:layout_toRightOf="@+id/iv_user_head"
            android:layout_below="@+id/tv_me_username"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_me_fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:divider="#fff"
        android:dividerHeight="18dp"
        />

</LinearLayout>
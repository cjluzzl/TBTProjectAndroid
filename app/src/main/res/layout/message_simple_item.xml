<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="5dp"
    >
    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息时间"
        android:textColor="@color/vpi__background_holo_light"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message_time"
        android:text="这是消息内容"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btn_message_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="查看详情"
        android:drawableRight="@drawable/detail_arrowright"
        android:layout_below="@+id/tv_message_content"
        />
    <TextView
        android:id="@+id/tv_message_null"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@null"
        android:layout_below="@+id/btn_message_show"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>